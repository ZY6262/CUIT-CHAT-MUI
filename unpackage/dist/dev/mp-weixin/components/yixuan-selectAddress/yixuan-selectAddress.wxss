.wrapper {
  z-index: 1999;
  position: absolute;
  top: -44px;
  left: 0;
  bottom: 0;
  right: 0;
}
.wrapper .content_view {
    z-index: 999;
    background: white;
    position: absolute;
    height: 80%;
    left: 0;
    bottom: 0;
    right: 0;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
}
.wrapper .content_view .title_view {
      height: 12%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      padding: 0 10px;
}
.wrapper .content_view .title_view .title {
        font-size: uni-font-size-sm;
}
.wrapper .content_view .title_view .close_view {
        height: 60px;
        width: 60px;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
                justify-content: center;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
}
.wrapper .content_view .select_top {
      height: 8%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: start;
      -webkit-justify-content: start;
              justify-content: start;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      padding: 10px;
      position: relative;
      box-sizing: border-box;
}
.wrapper .content_view .select_top .select_top_item {
        width: 80px;
        font-size: 14px;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
}
.wrapper .content_view .select_top .indicator {
        position: absolute;
        width: 30px;
        height: 2px;
        background: #dd524d;
        left: 16px;
        bottom: 0;
        -webkit-transition: left 0.5s ease;
        transition: left 0.5s ease;
}
.wrapper .content_view .swiper {
      height: 80%;
      position: relative;
      left: 0;
      top: 0;
      bottom: 0;
      right: 0;
}
.wrapper .content_view .swiper .swiper-item {
        height: 100%;
}
.wrapper .content_view .swiper .swiper-item .scroll-view-item {
          height: 100%;
          padding: 0 10px;
}
.wrapper .content_view .swiper .swiper-item .scroll-view-item .address_item {
            padding: 5px 0;
            font-size: 14px;
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            -webkit-box-align: center;
            -webkit-align-items: center;
                    align-items: center;
}
.wrapper .content_view .swiper .swiper-item .scroll-view-item .address_item .address_item_icon {
              width: 20px;
              height: 20px;
              margin-right: 10px;
}
.wrapper .mask {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: #999;
    opacity: 0.7;
}
.content-enter {
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
}
.content-enter-to {
  -webkit-transform: translateY(0%);
          transform: translateY(0%);
}
.content-enter-active {
  -webkit-transition: -webkit-transform 0.5s;
  transition: -webkit-transform 0.5s;
  transition: transform 0.5s;
  transition: transform 0.5s, -webkit-transform 0.5s;
}
.content-leave {
  -webkit-transform: translateY(0%);
          transform: translateY(0%);
}
.content-leave-to {
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
}
.content-leave-active {
  -webkit-transition: -webkit-transform 0.5s;
  transition: -webkit-transform 0.5s;
  transition: transform 0.5s;
  transition: transform 0.5s, -webkit-transform 0.5s;
}

